{
  "name": "hinos-file-service",
  "version": "1.0.0",
  "description": "Manage upload, download file via APIs",
  "main": ".build/index.js",
  "scripts": {
    "once": "npm install -g typescript && npm install -g cross-var && npm install -g tslint-config-standard",
    "start": "node .",
    "build": "rimraf .build && tsc",
    "pretest": "rimraf .spec && tsc -p src/test/tsconfig.json",
    "test": "mocha --opts src/test/mocha.opts \".spec/test/spec/*.js\"",
    "dev": "rimraf .build && tsc --watch --pretty --sourceMap",
    "pm2": "cross-var \"npm run build && pm2 start . --env production --name $npm_package_name\""
  },
  "config": {
    "externalConfig": "../config.cfg#files",
    "url": "http://localhost:6112",
    "routes": [],
    "services": {
      "oauth": "http://localhost:6111"
    },
    "encryptKey": ")^!!!(**",
    "mongo": {
      "url": "mongodb://localhost:27017/files",
      "releaseTimeout": 50000
    },
    "app": {
      "periodToDelete": 3600000,
      "scanTimeout": 1800000
    }
  },
  "dependencies": {
    "archiver": "^2.0.0",
    "hinos": "^1.1.0",
    "hinos-bodyparser": "^1.1.1",
    "hinos-common": "^1.0.5",
    "hinos-cors": "^1.0.0",
    "hinos-helmet": "^1.0.0",
    "hinos-mongo": "^1.0.7",
    "hinos-requestmatcher": "^1.0.5",
    "hinos-route": "^1.1.3",
    "hinos-serve": "^1.1.0",
    "hinos-validation": "^1.1.1",
    "lodash": "^4.17.4"
  },
  "author": "doanthuanthanh88@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/lodash": "^4.14.71",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.39",
    "chai": "^3.5.0",
    "mocha": "^3.3.0",
    "rimraf": "^2.6.1"
  }
}
