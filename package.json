{
  "name": "hinos-framework",
  "version": "1.0.0",
  "description": "hinos project which is built for APIs",
  "main": ".build/index.js",
  "scripts": {
    "preinstall": "npm install -g typescript",
    "postinstall": "npm install -g typescript-formatter",
    "build:clean": "rimraf .build",
    "build": "npm run build:clean && tsc",
    "dev": "npm run build:clean && tsc --watch --pretty --sourceMap",
    "pretest": "tsc -p src/test/tsconfig.json",
    "test": "mocha --opts src/test/mocha.opts \".spec/test/spec/*.js\"",
    "gen": "tsc -p gen_code/tsconfig.json && node ./gen_code/.build"
  },
  "dependencies": {
    "hinos": "^1.0.0",
    "hinos-bodyparser": "^1.0.1",
    "hinos-common": "^1.0.0",
    "hinos-mongo": "^1.0.1",
    "hinos-rabbitmq": "^1.0.1",
    "hinos-redis": "^1.0.1",
    "hinos-requestmatcher": "^1.0.0",
    "hinos-route": "^1.0.1",
    "hinos-serve": "^1.0.1",
    "hinos-socketio": "^1.0.0",
    "hinos-validation": "^1.0.0",
    "lodash": "^4.17.4"
  },
  "author": "doanthuanthanh88@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/lodash": "^4.14.64",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.18",
    "chai": "^3.5.0",
    "mocha": "^3.3.0",
    "rimraf": "^2.6.1"
  }
}
