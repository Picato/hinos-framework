{
  "name": "hinos-oauth-service",
  "version": "1.0.0",
  "description": "Manage authen, authoiz via APIs",
  "main": ".build/index.js",
  "scripts": {
    "once": "npm install -g typescript && npm install -g cross-var && npm install -g tslint-config-standard",
    "start": "node .",
    "build": "rimraf .build && tsc",
    "pretest": "rimraf .spec && tsc -p src/test/tsconfig.json",
    "test": "mocha --opts src/test/mocha.opts \".spec/test/spec/*.js\"",
    "dev": "rimraf .build && tsc --watch --pretty --sourceMap",
    "pm2": "cross-var \"pm2 start . --env production --name $npm_package_name\""
  },
  "config": {
    "externalConfig": "../config.cfg#oauth",
    "url": "http://localhost:6111",
    "path": "/oauth",
    "services": {
      "oauth": "http://localhost:6111"
    },
    "mongo": {
      "url": "mongodb://localhost:27017/oauthv3",
      "releaseTimeout": 50000
    },
    "redis": {
      "host": "localhost",
      "port": 6379,
      "db": 0,
      "releaseTimeout": 50000
    },
    "app": {
      "suid": "123456789"
    },
    "encrypt": {
      "pwd": ")^!!!(**",
      "mode": [
        "query",
        "body",
        "response"
      ],
      "baseOnRequest": true
    }
  },
  "dependencies": {
    "axios": "^0.16.2",
    "hinos": "^1.1.5",
    "hinos-bodyparser": "^2.1.1",
    "hinos-cors": "^1.0.1",
    "hinos-helmet": "^1.0.0",
    "hinos-mongo": "^1.1.4",
    "hinos-redis": "^1.0.7",
    "hinos-requesthasher": "^1.1.7",
    "hinos-route": "^1.1.8",
    "hinos-validation": "^1.1.2",
    "lodash": "^4.17.4"
  },
  "author": "doanthuanthanh88@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^3.5.2",
    "@types/lodash": "^4.14.77",
    "@types/mocha": "^2.2.43",
    "@types/node": "^7.0.43",
    "mocha": "^3.5.3",
    "rimraf": "^2.6.2"
  }
}
