{
  "name": "hinos-log-service",
  "version": "1.0.0",
  "description": "Manage logs via APIs",
  "main": ".build/index.js",
  "private": true,
  "scripts": {
    "once": "npm install -g typescript && npm install -g cross-var && npm install -g tslint-config-standard",
    "start": "node .",
    "build": "rimraf .build && tsc",
    "pretest": "rimraf .spec && tsc -p src/test/tsconfig.json",
    "test": "mocha --opts src/test/mocha.opts \".spec/test/spec/*.js\"",
    "dev": "rimraf .build && tsc --watch --pretty --sourceMap",
    "pm2": "cross-var \"pm2 start . --env production --name $npm_package_name\""
  },
  "appconfig": {
    "externalConfig": "../config.cfg#log",
    "url": "http://localhost:6114",
    "path": "/log",
    "services": {
      "oauth": "http://localhost:6111"
    },
    "mongo": {
      "url": "mongodb://localhost:27017/log",
      "releaseTimeout": 50000
    },
    "encrypt": {
      "pwd": "a!b@=;",
      "mode": [
        "query",
        "body",
        "response"
      ],
      "baseOnRequest": true,
      "helmet": false
    }
  },
  "dependencies": {
    "zip-folder": "^1.0.0"
  },
  "peerDependencies": {
    "axios": "^0.16.2",
    "hinos": "^1.1.5",
    "hinos-bodyparser": "^2.1.1",
    "hinos-cors": "^1.0.1",
    "hinos-helmet": "^1.0.0",
    "hinos-mongo": "^1.1.7",
    "hinos-requesthasher": "^1.1.9",
    "hinos-route": "^1.1.12",
    "hinos-validation": "^1.1.2",
    "lodash": "^4.17.4",
    "rimraf": "^2.6.2"
  },
  "author": "doanthuanthanh88@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^3.5.2",
    "@types/lodash": "^4.14.82",
    "@types/mocha": "^2.2.44",
    "@types/node": "^7.0.48",
    "chai": "^3.5.0",
    "mocha": "^3.5.3"
  }
}
