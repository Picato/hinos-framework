{
  "name": "hinos-coin",
  "version": "1.0.0",
  "description": "hinos project which is built for APIs",
  "main": ".build/index.js",
  "scripts": {
    "once": "npm install -g typescript && npm install -g cross-var && npm install -g tslint-config-standard",
    "start:main-crawler": "node .build/service/Crawler/Main.js",
    "start:crawler": "node .build/service/Crawler/Index.js",
    "start:telegram": "node .build/service/Telegram/Index.js",
    "start:ai": "node .build/service/AI/Index.js",
    "start:api": "node .build/index.js",
    "start": "concurrently \"npm run start:main-crawler\" \"npm run start:crawler\" \"npm run start:telegram\" \"npm run start:ai\" \"npm run start:api\"",
    "pm2:main-crawler": "pm2 start .build/service/Crawler/Main.js --env production --name coin-main-crawler",
    "pm2:crawler": "pm2 start .build/service/Crawler/Index.js --env production --name coin-crawler",
    "pm2:telegram": "pm2 start .build/service/Telegram/Index.js --env production --name coin-telegram",
    "pm2:ai": "pm2 start .build/service/AI/Index.js --env production --name coin-ai",
    "pm2:api": "pm2 start .build/index.js --env production --name coin-api",
    "pm2": "npm run pm2:main-crawler && npm run pm2:crawler && npm run pm2:telegram && npm run pm2:ai && npm run pm2:api",
    "prebuild": "rimraf .build .spec",
    "build": "tsc",
    "pretest": "rimraf .spec && tsc -p src/test/tsconfig.json",
    "test": "mocha --opts src/test/mocha.opts \".spec/test/spec/*.js\"",
    "dev": "tsc --watch --pretty --sourceMap",
    "hinosgen": "git clone https://github.com/doanthuanthanh88/quickstart.git -b hinos@gencode --single-branch @gencode && cd @gencode && npm install",
    "gen": "cd @gencode && npm start"
  },
  "appconfig": {
    "externalConfig": "./appconfig.cfg#api",
    "url": "http://localhost:1009",
    "path": "/coin-api",
    "app": {
      "bittrex": {
        "scanTimeout": 5000,
        "scanRemitano": 10000
      }
    },
    "mongo": {
      "url": "mongodb://localhost:27017/coindb",
      "releaseTimeout": 1000
    },
    "redis": {
      "host": "localhost",
      "port": 6379,
      "db": 2,
      "releaseTimeout": 1000
    },
    "encrypt": {
      "pwd": ")^!!!(**",
      "mode": [
        "query",
        "body",
        "response"
      ],
      "baseOnRequest": true
    }
  },
  "dependencies": {
    "hinos": "^1.1.6",
    "hinos-bodyparser": "^2.2.3",
    "hinos-common": "^1.0.8",
    "hinos-cors": "^1.0.2",
    "hinos-helmet": "^1.0.0",
    "hinos-mongo": "^1.2.3",
    "hinos-rabbitmq": "^2.0.14",
    "hinos-redis": "^1.1.11",
    "hinos-requesthasher": "^1.1.18",
    "hinos-requestmatcher": "^1.0.7",
    "hinos-route": "^1.1.14",
    "hinos-serve": "^1.1.2",
    "hinos-socketio": "^2.0.11",
    "hinos-validation": "^1.1.2",
    "lodash": "^4.17.4",
    "log4js": "^2.5.2",
    "node-bittrex-api": "^0.8.2",
    "phantom": "^4.0.12",
    "telegraf": "^3.17.5",
    "typescript": "^2.6.2"
  },
  "author": "doanthuanthanh88@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^3.5.2",
    "@types/lodash": "^4.14.98",
    "@types/log4js": "^2.3.5",
    "@types/mocha": "^2.2.47",
    "@types/node": "^7.0.52",
    "axios": "^0.16.2",
    "chai": "^3.5.0",
    "concurrently": "^3.5.1",
    "mocha": "^3.5.3",
    "rimraf": "^2.6.2"
  }
}
