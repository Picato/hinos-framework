{
  "name": "hinos-mail-service",
  "version": "1.0.0",
  "description": "hinos service project which is built for micro service APIs",
  "main": ".build/index.js",
  "private": true,
  "scripts": {
    "once": "npm install -g typescript && npm install -g cross-var && npm install -g tslint-config-standard",
    "start": "node .",
    "build": "rimraf .build && tsc",
    "pretest": "rimraf .spec && tsc -p src/test/tsconfig.json",
    "test": "mocha --opts src/test/mocha.opts \".spec/test/spec/*.js\"",
    "dev": "rimraf .build && tsc --watch --pretty --sourceMap",
    "pm2": "cross-var \"pm2 start . --env production --name $npm_package_name\"",
    "hinosgen": "git clone https://github.com/doanthuanthanh88/quickstart.git -b hinos@gencode --single-branch @gencode && cd @gencode && npm install",
    "gen": "cd @gencode && npm start"
  },
  "appconfig": {
    "externalConfig": "../config.cfg#mail",
    "url": "http://localhost:6113",
    "path": "/mail",
    "services": {
      "oauth": "http://localhost:6111"
    },
    "mongo": {
      "url": "mongodb://localhost:27017/mail",
      "releaseTimeout": 5000
    },
    "redis": {
      "host": "localhost",
      "port": 6379,
      "db": 0,
      "releaseTimeout": 5000
    },
    "app": {
      "scanTimeout": 1000,
      "retrySending": 300000
    },
    "encrypt": {
      "pwd": "a!b@=;",
      "mode": [
        "query",
        "body",
        "response"
      ],
      "baseOnRequest": true,
      "helmet": false
    }
  },
  "dependencies": {
    "zip-folder": "^1.0.0"
  },
  "peerDependencies": {
    "axios": "^0.16.2",
    "hinos": "^1.1.5",
    "hinos-bodyparser": "^2.1.1",
    "hinos-cors": "^1.0.1",
    "hinos-helmet": "^1.0.0",
    "hinos-mongo": "^1.1.7",
    "hinos-redis": "^1.0.25",
    "hinos-requesthasher": "^1.1.9",
    "hinos-route": "^1.1.12",
    "hinos-validation": "^1.1.2",
    "lodash": "^4.17.4",
    "rimraf": "^2.6.2"
  },
  "author": "doanthuanthanh88@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.44",
    "@types/node": "^7.0.48",
    "mocha": "^3.5.3"
  }
}