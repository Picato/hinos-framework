{
  "name": "hinos-file-service",
  "version": "1.0.0",
  "description": "Manage upload, download file via APIs",
  "main": ".build/index.js",
  "scripts": {
    "prepare": "npm install -g typescript && npm install -g cross-var",
    "start": "node .",
    "prebuild": "rimraf .build .spec",
    "build": "tsc",
    "pretest": "rimraf .spec && tsc -p src/test/tsconfig.json",
    "test": "mocha --opts src/test/mocha.opts \".spec/test/spec/*.js\"",
    "dev": "tsc --watch --pretty --sourceMap",
    "pm2": "cross-var \"npm run build && pm2 start . --env production --name $npm_package_name\""
  },
  "config": {
    "externalConfig": "./appconfig.cfg#api",
    "url": "http://localhost:1002",
    "services": {
      "oauth": "http://localhost:1001"
    },
    "encryptKey": ")^!!!(**",
    "mongo": {
      "url": "mongodb://localhost:27017/files",
      "releaseTimeout": 50000
    }
  },
  "dependencies": {
    "hinos": "^1.0.8",
    "hinos-bodyparser": "^1.0.7",
    "hinos-common": "^1.0.4",
    "hinos-cors": "^1.0.0",
    "hinos-mongo": "^1.0.7",
    "hinos-requestmatcher": "^1.0.4",
    "hinos-route": "^1.0.6",
    "hinos-validation": "^1.0.6",
    "lodash": "^4.17.4"
  },
  "author": "doanthuanthanh88@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/lodash": "^4.14.64",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.23",
    "chai": "^3.5.0",
    "mocha": "^3.3.0",
    "rimraf": "^2.6.1"
  }
}