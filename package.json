{
  "name": "hinos-mail-service",
  "version": "1.0.0",
  "description": "hinos project which is built for APIs",
  "main": ".build/index.js",
  "scripts": {
    "start": "node .",
    "prebuild": "rimraf .build .spec",
    "build": "tsc",
    "pretest": "rimraf .spec && tsc -p src/test/tsconfig.json",
    "test": "mocha --opts src/test/mocha.opts \".spec/test/spec/*.js\"",
    "#predev": "npm install -g typescript && npm install -g concurrently",
    "#dev": "npm run build && concurrently \"tsc --watch --pretty --sourceMap\" \"npm start\"",
    "dev": "tsc --watch --pretty --sourceMap",
    "pm2": "npm run build && pm2 start pm2.config.js"
  },
  "dependencies": {
    "hinos": "^1.0.8",
    "hinos-bodyparser": "^1.0.7",
    "hinos-common": "^1.0.4",
    "hinos-cors": "^1.0.0",
    "hinos-mongo": "^1.0.5",
    "hinos-rabbitmq": "^1.0.4",
    "hinos-redis": "^1.0.4",
    "hinos-requestmatcher": "^1.0.4",
    "hinos-route": "^1.0.6",
    "hinos-serve": "^1.0.4",
    "hinos-socketio": "^1.0.3",
    "hinos-validation": "^1.0.6",
    "lodash": "^4.17.4",
    "nodemailer": "^4.0.1"
  },
  "author": "doanthuanthanh88@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/lodash": "^4.14.64",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.23",
    "@types/nodemailer": "^1.3.33",
    "chai": "^3.5.0",
