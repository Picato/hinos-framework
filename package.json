{
  "name": "hinos-api-monitor",
  "version": "1.0.0",
  "description": "Monitor all of services",
  "main": ".build/index.js",
  "scripts": {
    "once": "npm install -g typescript && npm install -g cross-var && npm install -g tslint-config-standard",
    "start": "node .",
    "prebuild": "rimraf .build .spec",
    "build": "tsc",
    "pretest": "rimraf .spec && tsc -p src/test/tsconfig.json",
    "test": "mocha --opts src/test/mocha.opts \".spec/test/spec/*.js\"",
    "dev": "tsc --watch --pretty --sourceMap",
    "pm2": "cross-var \"pm2 start . --env production --name $npm_package_name\""
  },
  "config": {
    "externalConfig": "../config.cfg#apiMonitor",
    "url": "http://localhost:6115",
    "services": {
      "oauth": "http://localhost:6111",
      "mail": "http://localhost:6113"
    },
    "mongo": {
      "url": "mongodb://localhost:27017/monitor",
      "releaseTimeout": 50000
    },
    "app": {
      "timeoutPingService": 300000,
      "timeoutSpamMail": 900000,
      "configs": {}
    },
    "encrypt": {
      "pwd": ")^!!!(**",
      "mode": [
        "query",
        "body",
        "response"
      ],
      "baseOnRequest": true
    }
  },
  "dependencies": {
    "axios": "^0.16.2",
    "hinos": "^1.1.2",
    "hinos-bodyparser": "^2.1.0",
    "hinos-cors": "^1.0.1",
    "hinos-helmet": "^1.0.0",
    "hinos-mongo": "^1.1.2",
    "hinos-requesthasher": "^1.1.0",
    "hinos-route": "^1.1.5",
    "hinos-socketio": "^1.0.7",
    "hinos-validation": "^1.1.2",
    "lodash": "^4.17.4",
    "portscanner": "^2.1.1"
  },
  "author": "doanthuanthanh88@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^3.5.2",
    "@types/node": "^7.0.42",
    "axios": "^0.16.2",
    "chai": "^3.5.0",
    "mocha": "^3.5.0",
    "rimraf": "^2.6.1"
  }
}
