{
  "name": "hinos-service",
  "version": "1.0.0",
  "description": "hinos service project which is built for micro service APIs",
  "main": ".build/index.js",
  "scripts": {
    "once": "npm install -g typescript && npm install -g cross-var && npm install -g tslint-config-standard",
    "start": "node .",
    "prebuild": "rimraf .build .spec",
    "build": "tsc",
    "pretest": "rimraf .spec && tsc -p src/test/tsconfig.json",
    "test": "mocha --opts src/test/mocha.opts \".spec/test/spec/*.js\"",
    "dev": "tsc --watch --pretty --sourceMap",
    "pm2": "cross-var \"pm2 start . --env production --name $npm_package_name\""
  },
  "config": {
    "externalConfig": "./appconfig.cfg#api",
    "url": "http://localhost:1007",
    "services": {
      "oauth": "http://localhost:1001"
    },
    "encryptKey": ")^!!!(**",
    "mongo": {
      "url": "mongodb://localhost:27017/test",
      "releaseTimeout": 50000
    },
    "encrypt": {
      "pwd": ")^!!!(**",
      "mode": [
        "query",
        "body",
        "response"
      ],
      "baseOnRequest": true
    }
  },
  "dependencies": {
    "hinos": "^1.1.2",
    "hinos-bodyparser": "^2.1.0",
    "hinos-cors": "^1.0.1",
    "hinos-helmet": "^1.0.0",
    "hinos-mongo": "^1.1.2",
    "hinos-requesthasher": "^1.1.0",
    "hinos-requestmatcher": "^1.0.7",
    "hinos-route": "^1.1.5",
    "hinos-serve": "^1.1.1",
    "hinos-validation": "^1.1.2",
    "lodash": "^4.17.4",
    "typescript": "^2.5.0"
  },
  "author": "doanthuanthanh88@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^3.5.2",
    "@types/lodash": "^4.14.73",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.42",
    "axios": "^0.16.2",
    "chai": "^3.5.0",
    "mocha": "^3.5.0",
    "rimraf": "^2.6.1"
  }
}
