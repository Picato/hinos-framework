{
  "name": "blaz-app",
  "version": "1.0.0",
  "description": "hinos project which is built for APIs",
  "main": ".build/index.js",
  "scripts": {
    "once": "npm install -g typescript && npm install -g cross-var && npm install -g tslint-config-standard",
    "start": "node .",
    "pm2:remitano": "pm2    start \".build/service/Coin/Remitano/Index.js\"  --env production --name \"blaz-remitano\"",
    "pm2:rawSyncCoin": "pm2    start \".build/service/Coin/Crawler/Index.main.js\"  --env production --name \"blaz-raw-sync-coin\"",
    "pm2:manualSyncCoin": "pm2 start \".build/service/Coin/Crawler/Index.js\"       --env production --name \"blaz-manual-sync-coin\"",
    "pm2:teleCmdBot": "pm2        start \".build/service/Coin/Telegram/Index.js\"      --env production --name \"blaz-telegram-command\"",
    "pm2:ai": "pm2             start \".build/service/Coin/AI/Index.js\"            --env production --name \"blaz-AI\"",
    "pm2:api": "pm2            start .                                              --env production --name \"blaz-api\"",
    "pm2": "npm run pm2:rawSyncCoin && npm run pm2:manualSyncCoin && npm run pm2:teleCmdBot && npm run pm2:remitano && npm run pm2:api",
    "prebuild": "rimraf .build .spec",
    "build": "tsc",
    "pretest": "rimraf .spec && tsc -p src/test/tsconfig.json",
    "test": "mocha --opts src/test/mocha.opts \".spec/test/spec/*.js\"",
    "dev": "tsc --watch --pretty --sourceMap",
    "hinosgen": "git clone https://github.com/doanthuanthanh88/quickstart.git -b hinos@gencode --single-branch @gencode && cd @gencode && npm install",
    "gen": "cd @gencode && npm start"
  },
  "appconfig": {
    "externalConfig": "./appconfig.cfg#api",
    "url": "http://localhost:10009",
    "path": "",
    "mongo": {
      "key": "coin",
      "url": "mongodb://localhost:27017/coin",
      "releaseTimeout": 1000
    },
    "redis": {
      "host": "localhost",
      "port": 6379,
      "db": 1,
      "releaseTimeout": 1000
    },
    "encrypt": {
      "pwd": ")^!!!(**",
      "mode": [
        "query",
        "body",
        "response"
      ],
      "baseOnRequest": true
    },
    "app": {
      "telegram": {
        "OrderBot": "",
        "AlertBot": "",
        "WatcherBot": "",
        "HelperBot": "",
        "AnalyticsBot": ""
      },
      "bittrex": {
        "apikey": "",
        "apisecret": "",
        "scanCurrency": 300000,
        "scanChecking": 5000,
        "scanRemitano": 10000
      },
      "gold": {
        "scanTimeout": 900000
      }
    }
  },
  "dependencies": {
    "hinos": "^1.1.6",
    "hinos-bodyparser": "^2.1.2",
    "hinos-common": "^2.0.7",
    "hinos-cors": "^1.0.2",
    "hinos-helmet": "^1.0.0",
    "hinos-mongo": "^1.2.3",
    "hinos-rabbitmq": "^2.0.14",
    "hinos-redis": "^1.1.11",
    "hinos-requesthasher": "^1.1.9",
    "hinos-requestmatcher": "^1.0.7",
    "hinos-route": "^1.1.12",
    "hinos-serve": "^1.1.2",
    "hinos-socketio": "^2.0.11",
    "hinos-validation": "^1.1.2",
    "lodash": "^4.17.4",
    "node-bittrex-api": "^0.8.1",
    "node.bittrex.api": "^1.0.0",
    "phantom": "^4.0.12",
    "qrcode": "^1.2.0",
    "speakeasy": "^2.0.0",
    "telegraf": "^3.17.3",
    "typescript": "^2.6.1",
    "xml2js": "^0.4.19"
  },
  "author": "doanthuanthanh88@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^3.5.2",
    "@types/lodash": "^4.14.92",
    "@types/mocha": "^2.2.46",
    "@types/node": "^7.0.52",
    "@types/phantom": "^3.2.4",
    "axios": "^0.16.2",
    "chai": "^3.5.0",
    "mocha": "^3.5.3",
    "rimraf": "^2.6.2"
  }
}